{
  "name": "typescript-node-api",
  "version": "1.0.0",
  "description": "Um projeto simples, estou colocando em prática: TDD, DDD, SOLID, CleanArchiteture além do NodeJS com TypeScript",
  "main": "index.ts",
  "scripts": {
    "test": "jest --passWithNoTests  --silent --noStackTrace --runInBand",
    "test:vergose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jestUnitConfig.js",
    "test:integration": "npm test -- --watch -c jestIntegrationConfig.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "clear:jest": " jest --clearCache",
    "prepare": "husky install"
  },
